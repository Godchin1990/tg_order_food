<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.pos.app.main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res/com.pos.orderfood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    android:id="@+id/fra_cash"
    android:orientation="vertical"
     >
     <TextView 
         android:id="@+id/tv_num_waitorder"
         android:text="线上待接订单：3"
         android:textColor="#666666"
         android:textSize="19sp"
         android:layout_width="match_parent"
         android:layout_height="75dp"
         android:gravity="center_vertical"
         android:layout_marginLeft="30dp"
         />
     <FrameLayout 
         android:id="@+id/fl_waitorder"
         android:layout_margin="10dp"
         android:layout_width="match_parent"
         android:layout_weight="1"
         android:layout_height="0dp"
         />
</LinearLayout>