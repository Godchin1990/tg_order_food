<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >

    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#EA793A" >
		<ImageView 
		    android:id="@+id/iv_logo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/logo1"
		    android:scaleType="fitXY"
		    android:layout_marginLeft="15dp"
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
		    
		    />
<!-- 		 <TextView
             android:background="@drawable/radio_yellow"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
 			android:layout_centerHorizontal="true"
        	android:gravity="center"
            android:text="智元支付欢迎您"
            android:textColor="@color/white"
            android:textSize="25sp" /> -->
		 <ImageView 
		     android:src="@drawable/icon_home_people"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_toLeftOf="@+id/tv_name"
		     android:layout_marginRight="8dp"
		      android:layout_centerVertical="true"
		     />
        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/line1"
            android:padding="20dp"
            android:text="张三"
            android:textColor="@color/white"
            android:textSize="21sp" />
        <View 
            android:id="@+id/line1"
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_toLeftOf="@+id/iv_setting"            
            />
        <ImageView 
            android:id="@+id/iv_setting"
            android:layout_marginLeft="30dp"
           	android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_setting"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title_bar"
        android:background="@color/white"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="130dp"
        android:gravity="center"
        android:orientation="vertical"
          >
        <LinearLayout 
             
            android:layout_width="wrap_content" 
            android:layout_weight="1"
            android:layout_height="0dp"
       
            >
            <ImageView 
                android:id="@+id/iv_cash"
                android:src="@drawable/icon_home_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <ImageView 
                android:id="@+id/iv_order"
                android:src="@drawable/icon_home_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <ImageView 
                android:id="@+id/iv_goods"
                android:src="@drawable/icon_home_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
        </LinearLayout>
        <LinearLayout 
             
            android:layout_width="wrap_content" 
            android:layout_weight="1"
            android:layout_height="0dp"
        
       
            >
            <ImageView 
                android:id="@+id/iv_member"
                android:src="@drawable/icon_home_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <ImageView 
                android:id="@+id/iv_account"
                android:src="@drawable/icon_home_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
            <ImageView 
                android:id="@+id/iv_kitchen"
                android:src="@drawable/icon_home_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                />
        </LinearLayout>
</LinearLayout>
</RelativeLayout>